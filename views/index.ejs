<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2>All blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="blog/<%= blog.id %>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet %></p>
                </a>
            <% }) %>
        <% } else { %>
            <p>no blogs to show....</p>
        <% } %>
    </div>
    <button onclick="window.print()">
        Print this page
    </button>
    <%- include('./partials/footer.ejs') %>
</body>
</html>